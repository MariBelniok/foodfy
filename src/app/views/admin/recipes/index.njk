{% extends "admin/layout.njk" %}

{% block content %}

<section class="admin-middle-container">
    <div class="admin-infos">
    <h1>Gerenciar Receitas</h1>
    <a href="/admin/recipes/create">Nova</a>
    </div>
    <div class="admin-cards">
        {%for item in items %}
        <div class="admin-card" id="{{item.id}}">
            <img src="{{ item.image }}" alt="Receita {{ item.title }}">
            <div class="index-info">
                <h3>{{ item.title }}</h3>
                <p>por {{ item.chef_name }}</p>
                <a href="/admin/recipes/{{ item.id }}">Visualizar</a>
            </div>
            
        </div>
        {% endfor %}
    </div>
</section>
{% endblock %}

