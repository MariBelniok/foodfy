{% extends "admin/layout.njk" %}

{% block content %}
<div class="admin-create-container">
    <form method="POST" action="/admin/chefs?_method=DELETE" id="delete-btn">
        <div class="delete-btn">
            <input type="hidden" name="id" value="{{chef.id}}">
            <button type="submit">Deletar</button> 
        </div>
    </form>
    <form action="/admin/chefs?_method=PUT" method="POST">
    <div class="admin-create-head">
        <h1>Editando chef </h1> 
        <input type="hidden" name="id" value="{{chef.id}}">
        <button type="submit">Salvar chef</button> 
    </div>
    <div class="form-item">
        <div>Nome</div>
        <input type="text" name="name" value="{{chef.name}}">
    </div>
    <div class="form-item">
        <div>Foto</div>
        <input type="text" name="avatar_url" value="{{chef.avatar_url}}">
    </div>
    </form>
</div>
{% include "confirm.njk" %}
{% endblock %}