<div class="form-item">
    <div>Nome</div>
    <input type="text" name="name" value="{{chef.name}}">
</div>

<div class="form-item">
    <div>Avatar</div>
    <div id="avatar-upload">
        <input 
            id="avatar-input"
            type="file" 
            name="image" 
            accept="image/*"
            onchange="ImagesUpload.handleFileInput(event, 1)"
        >
        <p class="btn">Enviar avatar</p>
    </div>

    <div id="images-preview">
        {% if image %}
            <div class="image" id={{image.id}}>
                <img src="{{image.src}}" alt="{{image.name}}">
                <i 
                    class="material-icons"
                    onclick="ImagesUpload.removeOldImages(event)"
                >
                close 
                </i>
            </div>
            <input type="hidden" name="removed_files"/>            
        {% endif %}
    </div>
</div>
         