{% extends "user/layoutFilter.njk"%}

{% block head %}
    <title>Foodfy - Buscando</title>
{% endblock %}

{% block content %}
<h2>Buscando por "{{ filter }}"</h2>
<section class="middle-container">
    <div class="cards">
        {%for item in items %}
        <div class="card" id="{{item.id}}">
            <img src="{{ item.image }}" alt="Receita {{ item.title }}">
            <h3>{{ item.title }}</h3>
            <p>{{ item.chefs_name }}</p>
        </div>
        {% endfor %}
    </div>
</section>
</div>
<script src="/scripts.js"></script>
{% endblock %}