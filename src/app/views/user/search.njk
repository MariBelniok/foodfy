{% extends "user/layoutFilter.njk"%}

{% block head %}
    <title>Foodfy - Buscando</title>
{% endblock %}

{% block content %}
<h2>Buscando por "{{ filter }}"</h2>
<section class="middle-container">
    <div class="cards">
        {%for item in items %}
        <div class="card" id="{{item.id}}">
            <img src="{{ item.image }}" alt="Receita {{ item.title }}">
            <h3>{{ item.title }}</h3>
            <p>{{ item.chef_name }}</p>
        </div>
        {% endfor %}
    </div>
    <div class="pagination" 
        data-page={{pagination.page}} 
        data-total={{pagination.total}} 
        data-filter={{filter}}>
    </div>
</section>
</div>
{% endblock %}